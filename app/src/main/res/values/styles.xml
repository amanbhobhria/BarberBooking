<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Defined a new style with three items of color. -->
    <style name="DemoTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>

        <!-- Defining that new color in ColorPrimaryDark -->
        <item name="colorPrimaryDark">@color/colorOfStatusBar</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--to toggle the open close button
         of the navigation drawer-->
    <string name="nav_open">Open</string>
    <string name="nav_close">Close</string>



    <style name="Divider">
        <item name="android:background">?android:attr/listDivider</item> //you can give your color here. that will change all divider color in your app.
    </style>

    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item> // You can change thickness here.

    </style>

    <style name="Divider.Vertical" parent="Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
</resources>