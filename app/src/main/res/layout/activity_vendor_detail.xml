<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vendor.VendorDetail">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
<ImageView
        android:id="@+id/backBtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:src="@drawable/ic_arrow_back_black_24dp" />

    <TextView
        android:id="@+id/detailTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Enter Details"
        android:textSize="26dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detailTxt"
        android:layout_marginTop="34dp"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ownerNameTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:capitalize="sentences"
            android:hint="Owner Name ('Required')"
            android:inputType="textPersonName" />


    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layt1"
        android:layout_marginTop="4dp"


        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/salNameTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:capitalize="sentences"
            android:hint="Saloon Name"
            android:inputType="textPersonName"
            android:maxLength="22" />


    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layt2"
        android:layout_marginTop="4dp"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/aadharNoTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:capitalize="sentences"
            android:hint="Aadhar Number ('Required')"
            android:inputType="number"
            android:maxLength="12" />


    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layt4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layt3"
        android:layout_marginTop="4dp"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/phoneNoTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:capitalize="sentences"
            android:hint="Phone Number ('Required')"
            android:nextFocusDown="@id/cityListSpin"
            android:inputType="phone"
            android:maxLength="10" />


    </com.google.android.material.textfield.TextInputLayout>


    <com.jaredrummler.materialspinner.MaterialSpinner
        android:id="@+id/cityListSpin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layt4"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="14dp" />





    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layt6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cityListSpin"
        android:layout_marginBottom="22dp"
        android:layout_marginTop="14dp"


        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/road"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Road name area colony ('Required')"
            android:inputType="text"
             />


    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/saveVendorDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
       android:layout_below="@+id/layt6"
        android:layout_marginRight="30dp"
        android:layout_marginTop="35dp"
        android:text="Save and Continue"
        android:textSize="13dp"
        android:textColor="#A3EA59" />
</RelativeLayout>
</ScrollView>