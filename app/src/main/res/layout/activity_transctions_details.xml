<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".stylist.TransactionsDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#CF0C0C"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/transaction_details"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:textSize="18sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/done"
            android:id="@+id/doneTxt"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginEnd="14dp"
            />


    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Awesome!"
        android:textColor="#3D6C06"
        android:textSize="18sp"
        android:layout_marginTop="18dp"
        android:layout_marginStart="14dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/your_booking_is_successful"
        android:layout_marginTop="18dp"
        android:textSize="16sp"
        android:layout_marginStart="14dp"
        />



    <TextView
        android:id="@+id/bookingIdTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginStart="14dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/transaction_details"
        android:layout_marginTop="18dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="14dp"
        />

    <View android:background="#E2000000"
        android:layout_width = "match_parent"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_height="1dp"/>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/transaction_id"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginStart="14dp"
            />

        <TextView
            android:id="@+id/transactionIdTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
           android:layout_alignParentEnd="true"
            android:layout_marginEnd="14dp"
            android:textColor="@color/black"
            />
    </RelativeLayout>


    <View android:background="#E2000000"
        android:layout_width = "match_parent"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_height="1dp"/>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/amount_paid"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginStart="14dp"
            />

        <TextView
            android:id="@+id/amountPaidTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="14dp"
            android:textColor="@color/black"
            />
    </RelativeLayout>





    <View android:background="#E2000000"
        android:layout_width = "match_parent"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_height="1dp"/>



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/booked_date_slot"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginStart="14dp"
            />

        <TextView
            android:id="@+id/slotDateTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="14dp"
            android:textColor="@color/black"
            />
    </RelativeLayout>


    <View android:background="#E2000000"
        android:layout_width = "match_parent"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_height="1dp"/>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/booked_slot"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginStart="14dp"
            />

        <TextView
            android:id="@+id/bookedSlotTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="14dp"
            android:textColor="@color/black"
            />
    </RelativeLayout>


    <View android:background="#E2000000"
        android:layout_width = "match_parent"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_height="1dp"/>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/booking_time"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginStart="14dp"
            />

        <TextView
            android:id="@+id/bookingTimeTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="14dp"
            android:textColor="@color/black"
            />
    </RelativeLayout>


    <View android:background="#E2000000"
        android:layout_width = "match_parent"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_height="1dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:textSize="12sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="@string/aadhar_required" />





</LinearLayout>