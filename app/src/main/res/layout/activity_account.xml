<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountActivity">

    <ImageView
        android:id="@+id/backProfileBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_arrow_back_black_24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Profile"

        android:textColor="@color/black"
        android:textSize="18dp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:layout_below="@+id/backProfileBtn"
        android:layout_marginTop="15dp"
        android:background="@android:color/darker_gray" />



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sicon"
        android:layout_centerInParent="true"
        android:layout_above="@+id/signInText"
        />

    <TextView
        android:id="@+id/signInText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Sign in to acess your profile"
        android:textColor="@color/black"
        android:textSize="14dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/signInText"
        android:layout_centerInParent="true"
        android:text="All your preference are saved to your account"
        android:textSize="12dp" />

    <View
        android:id="@+id/phline1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/phoneLayout"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@android:color/darker_gray" />
    <View
        android:id="@+id/phline2"
        android:layout_width="1dp"
        android:layout_height="230dp"
        android:layout_below="@+id/phline1"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/darker_gray" />
    <View
        android:id="@+id/phline3"
        android:layout_width="1dp"
        android:layout_height="230dp"
        android:layout_below="@+id/phline1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="25dp"
        android:layout_alignParentRight="true"
        android:background="@android:color/darker_gray" />

    <RelativeLayout
        android:id="@+id/phoneLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_above="@+id/orTxt"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/phline2"
        android:layout_marginRight="16dp"
        android:background="#F1E8E8"
        android:layout_marginTop="25dp"
        android:layout_toLeftOf="@+id/phline3"
        >

        <TextView
            android:id="@+id/phoneSuffix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:background="@null"
            android:inputType="phone"
            android:text=" +91"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/phoneNoEdit"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="2dp"
            android:layout_toRightOf="@+id/phoneSuffix"
            android:background="@null"
            android:hint="Enter mobile number "
            android:inputType="phone"
            android:maxLength="10"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/verifyPhoneBtn"
            android:layout_width="58dp"
            android:layout_height="47dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="1dp"

            android:background="@drawable/verifyphonebutton"
            android:src="@drawable/ic_baseline_arrow_forward_24"

            />

    </RelativeLayout>
    <View
        android:id="@+id/phline4"
        android:layout_width="44dp"
        android:layout_height="1dp"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="25dp"
        android:layout_above="@+id/truecallerBtn"
        android:layout_centerHorizontal="true"
        android:layout_toLeftOf="@+id/orTxt"
        android:layout_marginBottom="10dp"
        android:background="@android:color/darker_gray" />
    <TextView
        android:id="@+id/orTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="or"
        android:layout_above="@+id/truecallerBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"

       />
    <View
        android:id="@+id/phline5"
        android:layout_width="44dp"
        android:layout_height="1dp"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
       android:layout_above="@+id/truecallerBtn"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@+id/orTxt"
        android:layout_marginBottom="10dp"
        android:background="@android:color/darker_gray" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#1F54DC"
        android:layout_marginLeft="49dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="49dp"
        android:layout_marginBottom="45dp"
        android:layout_marginTop="16dp"
        android:id="@+id/truecallerBtn"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_call_24"
            android:background="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_toLeftOf="@+id/tcText"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            />
        <TextView
            android:id="@+id/tcText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="One tap login with Truecaller"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:textStyle="bold"
            />

    </RelativeLayout>
</RelativeLayout>