<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".user.ShowBookingDetailsActivity">


    <TextView
        android:id="@+id/hiUserTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="14dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="14dp"
        android:text="@string/your_booking_is_successful" />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="14dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:layout_marginTop="18dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="@string/price_details"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12sp"
                    android:text="@string/price_paid"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/pricePaidBg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="150dp"
                    android:layout_marginTop="12sp"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/belowBookingDetailsBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_baseline_keyboard_arrow_down_24" />

                <ImageView
                    android:id="@+id/upBookingDetailsBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_baseline_keyboard_control_key_24"
                    android:visibility="gone" />
            </LinearLayout>


            <!--            //Payment Details-->
            <LinearLayout
                android:id="@+id/viewFullDetailsLyt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="#52787878"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/paymentDetailsBgTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="6dp" />


            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/bycIdBG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BYC9879"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginStart="14dp"
        />
    <TextView
        android:id="@+id/userAddressBG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main Road bhunna"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        android:layout_marginStart="14dp"
        />
    <TextView
        android:id="@+id/usercityBG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sirsa"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"
        android:layout_marginStart="14dp"
        />
    <TextView
        android:id="@+id/bookingIdTxtBG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"
        android:layout_marginStart="14dp"
        />
    <TextView
        android:id="@+id/bookingSlotTxtBG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"
        android:layout_marginStart="14dp"
        />
    <TextView
        android:id="@+id/bookingSlotDateTxtBG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"
        android:layout_marginStart="14dp"
        />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="16dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="@string/track_stylist"
        android:layout_marginStart="14dp"
       android:layout_marginTop="4dp"
        android:textColor="@color/black"


        />

            <TextView
                android:id="@+id/trackingListBG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="16dp"
                android:textColor="@color/black"
                />

            <Button
                android:id="@+id/callBtnBG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INQUIRY"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="20dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>